<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Notes</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f0f2f5;
      margin: 0;
      padding: 0;
    }

    header {
      background: #343a40;
      color: white;
      padding: 1rem 2rem;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1100px;
      margin: 0 auto;
    }

    .header-container h1 {
      margin: 0;
      font-size: 2rem;
    }

    .header-container a {
      color: white;
      text-decoration: none;
      font-size: 1rem;
    }

    .header-container a:hover {
      text-decoration: underline;
    }

    .container {
      max-width: 1100px;
      margin: 2rem auto;
      padding: 1rem;
    }

    .notes-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      justify-content: center;
    }

    .note-card {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.05);
      width: 100%;
      max-width: 300px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .note-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 24px rgba(0,0,0,0.1);
    }

    .note-card h3 {
      margin-top: 0;
      font-size: 1.2rem;
      color: #333;
    }

    .note-card p {
      color: #555;
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    .view-button {
      display: inline-block;
      padding: 8px 14px;
      background: #007bff;
      color: white;
      border-radius: 5px;
      font-size: 0.9rem;
      text-decoration: none;
      transition: background 0.2s ease;
    }

    .view-button:hover {
      background: #0056b3;
    }

    .add-note {
      display: block;
      width: fit-content;
      margin: 2rem auto 0;
      padding: 12px 24px;
      background: #28a745;
      color: white;
      border-radius: 6px;
      text-decoration: none;
      font-size: 1rem;
      transition: background 0.2s ease;
    }

    .add-note:hover {
      background: #218838;
    }

    @media (max-width: 768px) {
      .header-container {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .note-card {
        max-width: 100%;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="header-container">
      <h1>My Notes</h1>
      <a href="/profile">Profile</a>
    </div>
  </header>

  <div class="container">
    <% if (notes.length === 0) { %>
      <p style="text-align: center; color: #888;">No notes yet. Create your first one!</p>
    <% } else { %>
      <div class="notes-grid">
        <% notes.forEach(note => { %>
          <div class="note-card">
            <h3><%= note.name %></h3>
            <p><%= note.content.length > 120 ? note.content.substring(0, 120) + '...' : note.content %></p>
            <a class="view-button" href="/notes/<%= note.id %>">View</a>
          </div>
        <% }); %>
      </div>
    <% } %>

    <a class="add-note" href="/notes/new">+ Add Note</a>
  </div>
</body>
</html>
